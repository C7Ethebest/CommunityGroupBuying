.main{
  width: 100%;
  height: 448px;
  background-color: #f7f7f7;
  position: absolute;
}

.head{
  height: 70px;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: white;
  border-radius: 10px/10px;
  margin: 5px 10px 0px 10px;
}

view .van-checkbox{
  background-color: white;
  margin-bottom: 5px;
  margin-left: 5px;
}

.userInfo{
  width: 100%;
  background-color: white;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.uerInfo-left-top{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.status{
  background-color: orange;
  padding: 3px;
}

.username .phone-number{
  padding-left: 10px;
}

.uerInfo-right{
  padding-right: 10px;
  display: flex;
  align-items: center;
  color: gray;
}


.foot{
  position:absolute;
  bottom: 5px;
}

view .van-button{
  margin-left: 10px;
  width: 300px;
}